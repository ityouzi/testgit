<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>朋友列表</title>		
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../css/mui.min.css" rel="stylesheet" />
		<link rel="stylesheet" type="text/css" href="../css/touch-index.css" />
		<link rel="stylesheet" href="../css/common.css" />
		<script type="text/javascript" src="../js/common.js"></script>
		<link rel="stylesheet" href="../css/dmaku.css" />
		<script src="../js/mui.min.js"></script>
		<script type="text/javascript" src="../js/jquery-1.10.2.min.js"></script>
		<script type="text/javascript" src="../js/public.js"></script>	
		<style type="text/css">
			html,
			body {
				width: 7.5rem;
			    height: 100%;
			    background: url(../img/mine/pengyou-bg.png) no-repeat;
			    -webkit-background-size: 100%;
			    background-size: 100% 100%;
			    overflow-y: auto;
			}
			.fdongtai {
			    height: 100%;
			    width: 0.8rem;
			    position: absolute;
			    right: 0.15rem;
			    top: 0;
			    text-align: left;
			    line-height: 1.07rem;
			    display: flex;
			    align-items: center;
			    font-size: 0.24rem;
			}			
			
			.friend-list{
         		width: 100%;
         		display: flex;
         		flex-direction: column;
         		justify-content: flex-start;
         		align-items: flex-start;
         		font-size: 0.26rem;
         		/*padding: 10px;*/
         		box-sizing: border-box;
         		color: #FFFFFF;
         		margin-bottom: 1.15rem;
         		margin-top: 1.07rem;
         	}
         	.flat{
				width: 100%;
	     		height: 1rem;
	     		display: flex;
	     		justify-content: flex-start;
	     		align-items: center;
	     		font-size: 0.28rem;
	     		padding:0rem 0.3rem;
	     		margin-bottom: 0.1rem;
	     		box-sizing: border-box;	     	
	     		background-color: rgba(225, 222, 255, 0.3);
			    color: #FFFFFF;
			    filter: Alpha(opacity=30);
			}
			.one{
				display: flex;
				flex-direction: column;
	     		justify-content: flex-start;
	     		align-items: center;
				width: 100%;
				margin-bottom: 0.5rem;
			}
			.one>button{
				    width: 40%;
				    height: 0.66rem;
				    border-radius: 0.33rem;
				    box-sizing: border-box;
				    background-color: transparent;
				    border: 2px solid #b4b4dc;
				    margin-top: 0.3rem;
				    color: #FFFFFF;
				    font-size: 0.26rem
			}
		</style>
	</head>
	<body>
		
		<div class="head">
			<a href="mine.html"><img src="../img/back.png"></a>
			<div>朋友列表</div>
			<em class="fdongtai" onclick="add()">添加</em>
		</div>
		<!--底部-->
		<div class="dibu-box">
			<a href="touch-index.html">
				<div class="dibu-one">
					<img src="../img/index@1.png" />
					<span id="">
					首页
					</span>
				</div>
			</a>
			<a href="activity-add.html">
				<div class="dibu-one">
					<img src="../img/fabu@1.png" />
					<span id="" class="active">
					消息
					</span>
				</div>
			</a>
			<a href="hebing.html">
				<div class="dibu-one">
					<img src="../img/news@1.png" />
					<span id="">
					合并
					</span>
				</div>
			</a>
			<a href="mine.html">
				<div class="dibu-one">
					<img src="../img/mine@1.png" />
					<span id="" >
					我的
					</span>
				</div>
			</a>
		</div>
		
		
		
		<div class="friend-list" >			
			<!-- 内容展示 -->
		</div>
		
	
		<!--加载中-->
        <div class="loader">
		  <svg version="1.1" id="loader-1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
		     width="40px" height="40px" viewBox="0 0 50 50" style="enable-background:new 0 0 50 50;" xml:space="preserve">
		  <path fill="#000" d="M25.251,6.461c-10.318,0-18.683,8.365-18.683,18.683h4.068c0-8.071,6.543-14.615,14.615-14.615V6.461z">
		    <animateTransform attributeType="xml"
		      attributeName="transform"
		      type="rotate"
		      from="0 25 25"
		      to="360 25 25"
		      dur="0.6s"
		      repeatCount="indefinite"/>
		    </path>
		  </svg>
		</div> 
	</body>
	
	
	
		<script type="text/javascript">	
			mui('body').on('tap', 'a', function() {
				document.location.href = this.href;
			});
			$(function() {	
				//显示加载中
			    $(".loader").css("display","block");
				$.ajax({
					url: baseUrl + "/familyInf/friend/list?token=" + localStorage.token,
					type: "get",
					timeout:5000,
					success: function(result) {
						//隐藏加载中
						$(".loader").css("display","none");	
						var data = result.extend.result;
						if(result.code==200){
							mui.toast(JSON.stringify(result));
						}else{
							if(data==null||data==""){
								mui.toast("您还没有好友，可以添加好友！");
							}else{
								$.each(data, function(index, item) {							    
								    var name=$("<div class='flat'>姓名：</div>").append(item.name);
								
								    var phone=$("<div class='flat'>电话：</div>").append(item.phone);
								
								    var address=$("<div class='flat'>地址：</div>").append(item.address);
								
								    var bb=$("<button type='button' onclick='del(this)'>删除好友</button>").attr("name",item.userid);
								    var one=$("<div class='one'></div>").append(name,phone,address,bb);
								    
								    $('.friend-list').append(one);
								})
							}
							
						}
						
					},
					error: function(e) {
						//隐藏加载中
						$(".loader").css("display","none");	
						mui.toast(JSON.stringify(e));
					}
				})
			})			
			
		//添加
		function add(){
			location.href="myfriends.html";
		}
		
		//删除
		function del(obj){
			var userid = obj.getAttribute("name");		
//			alert(userid);
			//显示加载中
			$(".loader").css("display","block");
			$.ajax({
				url:baseUrl + "/familyInf/friend/del?token=" + localStorage.token + "&userid=" + userid,
				type:"get",
				timeout:5000,
				success: function(result){
					//隐藏加载中
					$(".loader").css("display","none");	
					if(result.code==200){
						mui.toast(JSON.stringify(result));
					}else{
						
						mui.toast("删除成功");
						setTimeout(function(){
							location.href="mine.html";
						},1000)
						
					}
					
				},
				error: function(e){
					//隐藏加载中
					$(".loader").css("display","none");	
					mui.toast(JSON.stringify(e));
				}
			});			
		}
		
		
		</script>
</html>
